{
  "name": "casperdash-utils",
  "version": "1.0.0",
  "description": "Casperdash utils",
  "private": false,
  "keywords": [
    "typescript"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "jsdelivr": "dist/bundle.min.js",
  "unpkg": "dist/bundle.min.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc  --downlevelIteration",
    "build-all": "yarn clean && yarn build && yarn esbuild-node",
    "esbuild-node": "esbuild src/index.ts --bundle --platform=node --minify --sourcemap=external --outfile=dist/esbuild/cli.js",
    "deploy": "yarn build-all && npm publish",
    "clean": "rimraf -r dist",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CasperDash/casperdash-utils.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CasperDash/casperdash-utils/issues"
  },
  "homepage": "https://github.com/CasperDash/casperdash-utils",
  "dependencies": {
    "@ethersproject/bytes": "^5.6.1",
    "blakejs": "^1.2.1",
    "casper-js-sdk": "^2.9.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/jest": "^28.1.6",
    "esbuild": "^0.15.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "tsc-alias": "^1.3.9",
    "typescript": "^4.4.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
